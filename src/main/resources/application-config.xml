<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation=
               "http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.2.xsd"
       xmlns:context="http://www.springframework.org/schema/context">

    <context:property-placeholder location="classpath:application.properties"/>
    <context:annotation-config/>
    <!--    <context:component-scan base-package="com/"/>-->

    <bean class="com.pahod.repository.storage.StorageInitializationPostProcessor"/>

    <bean class="com.pahod.repository.EventDAO"/>
    <bean class="com.pahod.repository.TicketDAO"/>
    <bean class="com.pahod.repository.UserDAO"/>
    <bean class="com.pahod.repository.storage.CommonInMemoryStorage"/>

    <bean id="eventService" class="com.pahod.service.EventService"/>
    <bean id="ticketService" class="com.pahod.service.TicketService"/>
    <bean id="userService" class="com.pahod.service.UserService"/>


    <bean id="facadeService" class="com.pahod.service.BookingFacadeImpl">
        <constructor-arg ref="eventService"/>
        <constructor-arg ref="ticketService"/>
        <constructor-arg ref="userService"/>
    </bean>
</beans>